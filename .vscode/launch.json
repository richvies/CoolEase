{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hub debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "svdFile": "Tools/OpenOCD/STM32L052.svd",
            "configFiles": [
                "Tools/OpenOCD/stlink.cfg",
                "Tools/OpenOCD/stm32l0.cfg"
            ],
            "preLaunchTask": "Build hub",
            "executable": "hub/bin/hub.elf"
        },
        {
            "name": "Hub bootloader debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "svdFile": "Tools/OpenOCD/STM32L052.svd",
            "configFiles": [
                "Tools/OpenOCD/stlink.cfg",
                "Tools/OpenOCD/stm32l0.cfg"
            ],
            "preLaunchTask": "Build hub",
            "executable": "hub/bin/hub_bootloader.elf"
        },
        {
            "name": "Sensor debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "svdFile": "Tools/OpenOCD/STM32L052.svd",
            "configFiles": [
                "Tools/OpenOCD/stlink.cfg",
                "Tools/OpenOCD/stm32l0.cfg"
            ],
            "preLaunchTask": "Build sensor",
            "executable": "sensor/bin/sensor.elf"
        },
        {
            "name": "Sensor bootloader debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "svdFile": "Tools/OpenOCD/STM32L052.svd",
            "configFiles": [
                "Tools/OpenOCD/stlink.cfg",
                "Tools/OpenOCD/stm32l0.cfg"
            ],
            "preLaunchTask": "Build sensor",
            "executable": "sensor/bin/sensor_bootloader.elf"
        },
        {
            "name": "Debug current Python file",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}