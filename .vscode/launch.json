{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "svdFile": "Tools/OpenOCD/STM32L052.svd",
            "configFiles": [
                "Tools/OpenOCD/stlink.cfg",
                "Tools/OpenOCD/stm32l0.cfg"
