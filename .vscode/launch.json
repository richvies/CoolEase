{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Hub debug",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "cwd": "${workspaceFolder}",
      "svdFile": "tools/openocd/STM32L052.svd",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32l0.cfg"
      ],
      "preLaunchTask": "mise: build",
      "executable": "build/Debug/hub/hub_Debug.elf",
      "showDevDebugOutput": "vscode",
      "device": "STM32L0xx",
      "runToEntryPoint": "main"
    },
    {
      "name": "Debug current Python file",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}